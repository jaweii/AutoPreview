{
  "name": "autopreviewer",
  "displayName": "AutoPreview",
  "publisher": "jawei",
  "description": "Preview React/Vue components in VS Code",
  "repository": "https://github.com/jaweii/AutoPreview",
  "icon": "res/icon/logo.png",
  "keywords": [
    "Preview",
    "React Preview",
    "Vue Preview",
    "React",
    "Vue",
    "Vite",
    "Webpack"
  ],
  "version": "0.3.2",
  "engines": {
    "vscode": "^1.63.0"
  },
  "categories": [
    "Debuggers"
  ],
  "activationEvents": [
    "*"
  ],
  "main": "./out/extension.js",
  "targets": {
    "main": false
  },
  "contributes": {
    "commands": [
      {
        "command": "AutoPreview.debug.refresh",
        "title": "Refresh",
        "icon": "$(refresh)",
        "category": "AutoPreview"
      },
      {
        "command": "AutoPreview.debug.lock",
        "title": "Lock",
        "icon": "$(lock)",
        "category": "AutoPreview"
      },
      {
        "command": "AutoPreview.debug.unlock",
        "title": "Unlock",
        "icon": "$(unlock)",
        "category": "AutoPreview"
      }
    ],
    "views": {
      "autopreview-container": [
        {
          "id": "AutoPreview.debug",
          "contextualTitle": "Auto Preview",
          "name": "Auto Preview",
          "type": "webview",
          "visibility": "visible"
        }
      ]
    },
    "configuration": {
      "title": "AutoPreview",
      "properties": {
        "AutoPreview.serverURL": {
          "$comment": "Local Server URL",
          "type": "string",
          "default": ""
        },
        "AutoPreview.packageManager": {
          "$comment": "npm | yarn",
          "type": "string",
          "default": "yarn"
        },
        "AutoPreview.locked": {
          "$comment": "Lock/Unlock",
          "type": "boolean",
          "default": false
        },
        "AutoPreview.center": {
          "$comment": "Align Center/Align Left",
          "type": "boolean",
          "default": false
        },
        "AutoPreview.background": {
          "$comment": "Background Color",
          "type": "string",
          "default": "transparent"
        }
      }
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "autopreview-container",
          "icon": "res/icon/logo.svg",
          "title": "Auto Preview"
        }
      ]
    },
    "debuggers": [
      {
        "type": "AutoPreview",
        "label": "AutoPreview",
        "configurationSnippets": [
          {
            "label": "AutoPreview",
            "description": "AutoPreview",
            "body": {
              "type": "AutoPreview",
              "name": "AutoPreview",
              "request": "attach"
            }
          }
        ],
        "configurationAttributes": {
          "attach": {
            "properties": {}
          }
        }
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "yarn run esbuild && yarn run pbuild",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "yarn run compile && yarn run lint",
    "lint": "eslint src --ext ts",
    "test": "jest",
    "esbuild-base": "esbuild ./src/extension.ts --bundle --outfile=out/main.js --external:vscode --format=cjs --platform=node",
    "esbuild": "npm run esbuild-base -- --sourcemap",
    "esbuild-watch": "npm run esbuild-base -- --sourcemap --watch",
    "pwatch": "parcel watch ./app/index.html --dist-dir ./app/dist",
    "pbuild": "parcel build ./app/index.html --dist-dir ./app/dist"
  },
  "devDependencies": {
    "@parcel/transformer-less": "2.3.2",
    "@parcel/transformer-svg-react": "^2.3.2",
    "@types/fs-extra": "^9.0.13",
    "@types/get-port": "^4.2.0",
    "@types/glob": "^7.1.3",
    "@types/karma-chrome-launcher": "^3.1.1",
    "@types/mocha": "^8.0.4",
    "@types/node": "^12.20.47",
    "@types/puppeteer-core": "^5.4.0",
    "@types/vscode": "^1.63.0",
    "@types/ws": "^8.5.3",
    "@typescript-eslint/eslint-plugin": "^4.14.1",
    "@typescript-eslint/parser": "^4.14.1",
    "autoprefixer": "^10.4.2",
    "esbuild": "^0.14.21",
    "eslint": "^7.19.0",
    "glob": "^7.1.6",
    "jest": "^27.5.1",
    "mocha": "^8.2.1",
    "parcel": "^2.3.2",
    "postcss": "^8.4.8",
    "typescript": "^4.1.3",
    "vscode-test": "^1.5.0"
  },
  "dependencies": {
    "@vscode/codicons": "^0.0.28",
    "ahooks": "^3.3.0",
    "axios": "^0.25.0",
    "classnames": "^2.3.1",
    "fs-extra": "^10.0.0",
    "get-port": "4.2.0",
    "karma-chrome-launcher": "^3.1.1",
    "lodash": "^4.17.21",
    "mobx": "^6.1.0",
    "mobx-react": "^7.3.0",
    "puppeteer-core": "^13.5.2",
    "react": "^16.8.0 || ^17",
    "react-dom": "^17.0.2",
    "tailwindcss": "^3.0.23",
    "ws": "^8.5.0"
  }
}

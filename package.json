{
  "name": "autopreviewer",
  "displayName": "AutoPreview",
  "publisher": "jawei",
  "description": "Preview React/Vue components in VS Code",
  "repository": {
    "type": "git",
    "url": "https://github.com/jaweii/AutoPreview"
  },
  "keywords": [
    "Preview",
    "React",
    "Vue",
    "Preview React",
    "Preview Vue",
    "Vite",
    "Webpack"
  ],
  "version": "0.0.4",
  "engines": {
    "vscode": "^1.63.0"
  },
  "categories": [
    "Debuggers"
  ],
  "activationEvents": [
    "*"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "AutoPreview.debug.refresh",
        "title": "Refresh",
        "icon": "$(refresh)",
        "category": "AutoPreview"
      },
      {
        "command": "AutoPreview.debug.lock",
        "title": "Lock",
        "icon": "$(lock)",
        "category": "AutoPreview"
      },
      {
        "command": "AutoPreview.debug.unlock",
        "title": "Unlock",
        "icon": "$(unlock)",
        "category": "AutoPreview"
      }
    ],
    "views": {
      "debug": [
        {
          "id": "AutoPreview.debug",
          "name": "Auto Preview",
          "contextualTitle": "Auto Preview",
          "type": "webview",
          "visibility": "visible"
        }
      ]
    },
    "configuration": {
      "title": "AutoPreview",
      "properties": {
        "AutoPreview.serverURL": {
          "$comment": "服务启动地址",
          "type": "string",
          "default": ""
        },
        "AutoPreview.packageManager": {
          "$comment": "npm | yarn",
          "type": "string",
          "default": "yarn"
        },
        "AutoPreview.locked": {
          "$comment": "是否锁定",
          "type": "boolean",
          "default": false
        },
        "AutoPreview.background": {
          "$comment": "背景色",
          "type": "string",
          "default": "transparent"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "yarn run esbuild",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "yarn run compile && yarn run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js",
    "esbuild-base": "esbuild ./src/extension.ts --bundle --outfile=out/main.js --external:vscode --format=cjs --platform=node",
    "esbuild": "npm run esbuild-base -- --sourcemap",
    "esbuild-watch": "npm run esbuild-base -- --sourcemap --watch"
  },
  "devDependencies": {
    "@types/fs-extra": "^9.0.13",
    "@types/glob": "^7.1.3",
    "@types/mocha": "^8.0.4",
    "@types/node": "^12.11.7",
    "@types/vscode": "^1.63.0",
    "@typescript-eslint/eslint-plugin": "^4.14.1",
    "@typescript-eslint/parser": "^4.14.1",
    "esbuild": "^0.14.21",
    "eslint": "^7.19.0",
    "glob": "^7.1.6",
    "mocha": "^8.2.1",
    "typescript": "^4.1.3",
    "vscode-test": "^1.5.0"
  },
  "dependencies": {
    "axios": "^0.25.0",
    "fs-extra": "^10.0.0"
  }
}

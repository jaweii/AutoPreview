{
  "name": "autopreview",
  "displayName": "AutoPreview",
  "description": "Preview React/Vue components in VS Code",
  "keywords": [
    "Preview",
    "React",
    "Vue",
    "Preview React",
    "Preview Vue",
    "Vite",
    "Webpack"
  ],
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.63.0"
  },
  "categories": [
    "Debuggers"
  ],
  "activationEvents": [
    "*"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "AutoPreview.debug.refresh",
        "title": "Refresh",
        "icon": "$(refresh)",
        "category": "AutoPreview"
      },
      {
        "command": "AutoPreview.debug.lock",
        "title": "Lock",
        "icon": "$(lock)",
        "category": "AutoPreview"
      },
      {
        "command": "AutoPreview.debug.unlock",
        "title": "Unlock",
        "icon": "$(unlock)",
        "category": "AutoPreview"
      }
    ],
    "views": {
      "debug": [
        {
          "id": "AutoPreview.debug",
          "name": "Auto Preview",
          "contextualTitle": "Auto Preview",
          "type": "webview",
          "visibility": "visible"
        }
      ]
    },
    "configuration": {
      "title": "AutoPreview",
      "properties": {
        "AutoPreview.serverURL": {
          "$comment": "服务启动地址",
          "type": "string",
          "default": ""
        },
        "AutoPreview.packageManager": {
          "$comment": "npm | yarn",
          "type": "string",
          "default": "yarn"
        },
        "AutoPreview.locked": {
          "$comment": "是否锁定",
          "type": "boolean",
          "default": false
        },
        "AutoPreview.background": {
          "$comment": "背景色",
          "type": "string",
          "default": "transparent"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "yarn run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "yarn run compile && yarn run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^7.1.3",
    "@types/mocha": "^8.0.4",
    "@types/node": "^12.11.7",
    "@types/react-dom": "^17.0.11",
    "@types/vscode": "^1.63.0",
    "@typescript-eslint/eslint-plugin": "^4.14.1",
    "@typescript-eslint/parser": "^4.14.1",
    "eslint": "^7.19.0",
    "glob": "^7.1.6",
    "mocha": "^8.2.1",
    "typescript": "^4.1.3",
    "vscode-test": "^1.5.0"
  },
  "dependencies": {
    "@types/fs-extra": "^9.0.13",
    "express": "^4.17.2",
    "fs-extra": "^10.0.0",
    "shelljs": "^0.8.5",
    "vite": "^2.7.10",
    "webpack": "^5.66.0",
    "webpack-cli": "^4.9.1",
    "webpack-dev-server": "^4.7.3"
  }
}